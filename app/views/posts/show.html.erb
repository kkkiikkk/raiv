<div class="bg-smoky-white min-h-screen py-10 px-5">
  <div class="container mx-auto flex flex-col lg:flex-row items-start lg:items-center space-y-8 lg:space-y-0 lg:space-x-8">
    <% if @post.cover_image.attached? %>
      <div class="w-full lg:w-1/3">
        <%= image_tag(@post.cover_image, alt: @post.title, class: "rounded-lg shadow-lg w-full object-cover") %>
      </div>
    <% end %>

    <div class="w-full lg:w-2/3 text-center lg:text-left">
      <h1 class="text-2xl sm:text-3xl lg:text-4xl text-lilac font-bold mb-4"><%= @post.title %></h1>
      <p class="text-base sm:text-lg text-gray-700 leading-relaxed"><%= @post.description %></p>
    </div>
  </div>

  <% if @post.video.attached? %>
    <div class="post-video max-w-4xl mx-auto mt-10">
      <h2 class="text-xl sm:text-2xl text-gray-800 font-semibold mb-4 text-center">Watch Video</h2>
      <%= video_tag rails_blob_path(@post.video, disposition: "inline"),
                    controls: true,
                    class: "rounded-lg shadow-lg w-full" %>
    </div>
  <% else %>
    <p class="text-gray-600 text-center italic mt-10">No video available for this post.</p>
  <% end %>

  <div class="text-center mt-10">
    <%= link_to "Back to Posts",
                posts_path,
                class: "bg-lilac text-smoky-white font-semibold px-6 py-3 rounded-lg hover:bg-purple-400 transition duration-300 shadow-lg" %>
  </div>
</div>
